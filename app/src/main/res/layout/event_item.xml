<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginRight="32dp"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/eventname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font1"
            android:maxLines="1"
            android:text="EventName"
            android:textColor="@color/main_color2" />

        <TextView
            android:id="@+id/eventdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font2"
            android:textColor="@color/main_color2"
            android:maxLines="1"
            android:text="Event date" />

        <TextView
            android:id="@+id/eventplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/main_color2"
            android:fontFamily="@font/font2"
            android:text="Event place" />
</LinearLayout>

       <LinearLayout
           android:layout_width="60dp"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:id="@+id/publicEvent"
           android:gravity="center"
           android:layout_alignParentEnd = "true"
           android:layout_marginEnd="16dp"
           android:layout_gravity="end|center">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_visible"
            android:tint="@color/main_color2" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/public_event"
               android:textColor="@color/main_color2"
               android:fontFamily="@font/font1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/privateEvent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentEnd = "true"
            android:layout_marginEnd="16dp"
            android:layout_gravity="end|center"
            android:visibility="gone">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_notvisible"
                android:tint="@color/main_color2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/private_event"
                android:textColor="@color/main_color2"
                android:fontFamily="@font/font1"/>

        </LinearLayout>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/second_color2"/>


</LinearLayout>