<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="4dp"
    android:gravity="center_vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/image_profile"
        android:layout_gravity="center_vertical"
        android:src="@drawable/user_bydefault"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_profile"
        android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/username"
                        android:fontFamily="@font/font1"
                        android:text="Username"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/main_color2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/username"
                        android:fontFamily="@font/font1"
                        android:text=" - "
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/main_color2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/event"
                        android:fontFamily="@font/font1"
                        android:text="Event"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/main_color2"/>
                </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/startEvent"
                android:fontFamily="@font/font2"
                android:text="Start Date"
                android:maxLines="1"
                android:textSize="15sp"
                android:textColor="@color/main_color2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:fontFamily="@font/font2"
                android:text=" - "
                android:maxLines="1"
                android:textSize="15sp"
                android:textColor="@color/main_color2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/endEvent"
                android:fontFamily="@font/font2"
                android:text="End Date"
                android:maxLines="1"
                android:textSize="15sp"
                android:textColor="@color/main_color2"/>
        </LinearLayout>

    </LinearLayout>


    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/poke"
        android:gravity="center"
        android:layout_marginEnd="5dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/round_background_button"
            android:padding="5dp"
            android:tint="@color/main_color1"
            android:src="@drawable/ic_notif_poke">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send a Poke"
            android:fontFamily="@font/font1"
            android:textSize="12sp"
            android:textColor="@color/main_color2">

        </TextView>
    </LinearLayout>

</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentBottom="true"
        android:background="@color/second_color2"/>

</LinearLayout>
